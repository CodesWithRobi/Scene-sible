{
  "manifest_version": 3,
  "name": "Scene-sible",
  "version": "1.0",
  "author": "Robinson J",
  "homepage_url": "https://github.com/CodesWithRobi/Scene-sible",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.google.com/search?*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search?*"
      ],
      "js": [
        "content_scripts/scene_sible.js"
      ]
    }
  ],
  "action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "scene-sible@codeswithrobi.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "data_collection": false,
        "data_sharing": false,
        "data_retention": "stated-purpose",
        "required": [
          "none"
        ]
      }
    }
  }
}
